# PostgreSQL Database Configuration
# Option 1: Full DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://postgres:password@localhost:5432/league_bingo

# Option 2: Individual settings (alternative)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=league_bingo
# DB_USER=postgres
# DB_PASSWORD=password
# DB_TLS=false

# WebSocket Server URL
# In development: ws://localhost:8080
# In production: wss://your-ws-server.com
VITE_WS_URL=ws://localhost:8080

# Google Sheets Configuration
# Get API key from Google Cloud Console
GOOGLE_SHEETS_API_KEY=your_api_key_here
# Get sheet ID from the URL: https://docs.google.com/spreadsheets/d/SHEET_ID/edit
GOOGLE_SHEETS_ID=your_sheet_id_here
# Range to read (default covers 1000 rows)
GOOGLE_SHEETS_RANGE=Sheet1!A2:J1000