# WebSocket Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8080
NODE_ENV=development

# API Configuration
# URL of your SvelteKit application's API
API_URL=http://localhost:5173

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Redis Configuration (Optional - for horizontal scaling)
# REDIS_URL=redis://localhost:6379

# Security Configuration
MAX_CONNECTIONS_PER_IP=10
RATE_LIMIT_MESSAGES_PER_MINUTE=60

# Production URLs (update these when deployed)
API_URL=https://league-bingo-eta.vercel.app
ALLOWED_ORIGINS=https://league-bingo-eta.vercel.app,http://localhost:5173,http://localhost:3000